---
import svgNew from '../assets/new.svg'
import svgPinkStar from '../assets/pink-star.svg'

const education = {
  school: `SMK Taruna Bhakti`,
  major: `Jurusan Animasi`,
  period: `2024–2026`,
  desc: `Fokus pada pipeline animasi, desain, dan produksi konten kreatif.`
}

const experiences = [
  { 
    title: `Freelance Graphic Designer`,
    period: `2023–sekarang`,
    desc: `Sosial media design & banner komersial untuk UMKM.`,
  },
  { 
    title: `Motion/Animation Junior`,
    period: `2025`,
    desc: `Juara 1 bootcamp animasi SMK Taruna Bhakti Depok.`,
  },
  { 
    title: `Student Project`,
    period: `2024–2025`,
    desc: `Kolaborasi tim: brand kit & key visual sekolah.`,
  },
]
---


<section class="px-5 md:px-10">
    <div class="max-w-4xl mx-auto pb-20 overflow-hidden">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="flex relative">
          <h1 class="text-3xl">Education & Experience</h1>
          <img src={svgNew.src} alt="arrow" width="40" class="absolute -right-3 md:-right-10 bottom-0" />
        </div>
      </div>
  
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10 mt-12">
        <!-- Education -->
        <div class="bg-white border-2 p-6 shadow-[6px_6px_0px_rgba(0,0,0,0.3)]">
          <div class="flex items-center gap-2 mb-4">
            <img src={svgPinkStar.src} alt="star" width="24" />
            <h2 class="text-xl font-bold uppercase tracking-wide">Education</h2>
          </div>
          <div class="border-l-4 border-[var(--yellow)] pl-4">
            <h3 class="text-lg font-semibold">{education.school}</h3>
            <p class="font-medium text-gray-600">{education.major}</p>
            <p class="text-sm text-gray-500 mt-1">{education.period}</p>
            <p class="mt-2">{education.desc}</p>
          </div>
        </div>

        <!-- Experience -->
        <div class="bg-white border-2 p-6 shadow-[6px_6px_0px_rgba(0,0,0,0.3)]">
          <div class="flex items-center gap-2 mb-4">
            <img src={svgPinkStar.src} alt="star" width="24" />
            <h2 class="text-xl font-bold uppercase tracking-wide">Experience</h2>
          </div>
          <div class="flex flex-col gap-5">
            {experiences.map(item => (
              <div class="border-l-4 border-[var(--blue)] pl-4">
                <h3 class="text-lg font-semibold">{item.title}</h3>
                <p class="text-sm text-gray-500">{item.period}</p>
                <p class="mt-1">{item.desc}</p>
              </div>
            ))}
          </div>
        </div>

      </div>
    </div>
   </section>