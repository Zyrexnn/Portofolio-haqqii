---
import svgNew from '../assets/new.svg'
import svgPinkStar from '../assets/pink-star.svg'

const education = {
  school: `SMK Taruna Bhakti`,
  major: `Jurusan Animasi`,
  period: `2024–2026`,
  desc: `Fokus pada pipeline animasi, desain, dan produksi konten kreatif.`
}

const experiences = [
  { 
    title: `Freelance Graphic Designer`,
    period: `2023–sekarang`,
    desc: `Sosial media design & banner komersial untuk UMKM.`,
  },
  { 
    title: `Motion/Animation Junior`,
    period: `2025`,
    desc: `Juara 1 bootcamp animasi SMK Taruna Bhakti Depok.`,
  },
  { 
    title: `Student Project`,
    period: `2024–2025`,
    desc: `Kolaborasi tim: brand kit & key visual sekolah.`,
  },
]
---


<section class="px-5 md:px-10">
    <div class="max-w-4xl mx-auto pb-20 overflow-hidden">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="flex relative">
          <h1 class="text-3xl" style="color: var(--text-color);">Education & Experience</h1>
          <img src={svgNew.src} alt="arrow" width="40" class="absolute -right-3 md:-right-10 bottom-0 themed-svg" />
        </div>
      </div>
  
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10 mt-12">
        <!-- Education -->
        <div class="themed-card border-2 themed-border p-6" style="box-shadow: 6px 6px 0px var(--shadow-color);">
          <div class="flex items-center gap-2 mb-4">
            <img src={svgPinkStar.src} alt="star" width="24" class="themed-svg" />
            <h2 class="text-xl font-bold uppercase tracking-wide" style="color: var(--text-color);">Education</h2>
          </div>
          <div class="border-l-4 pl-4" style="border-color: var(--yellow);">
            <h3 class="text-lg font-semibold" style="color: var(--text-color);">{education.school}</h3>
            <p class="font-medium" style="color: var(--text-muted);">{education.major}</p>
            <p class="text-sm mt-1" style="color: var(--text-muted);">{education.period}</p>
            <p class="mt-2" style="color: var(--text-color);">{education.desc}</p>
          </div>
        </div>

        <!-- Experience -->
        <div class="themed-card border-2 themed-border p-6" style="box-shadow: 6px 6px 0px var(--shadow-color);">
          <div class="flex items-center gap-2 mb-4">
            <img src={svgPinkStar.src} alt="star" width="24" class="themed-svg" />
            <h2 class="text-xl font-bold uppercase tracking-wide" style="color: var(--text-color);">Experience</h2>
          </div>
          <div class="flex flex-col gap-5">
            {experiences.map(item => (
              <div class="border-l-4 pl-4" style="border-color: var(--blue);">
                <h3 class="text-lg font-semibold" style="color: var(--text-color);">{item.title}</h3>
                <p class="text-sm" style="color: var(--text-muted);">{item.period}</p>
                <p class="mt-1" style="color: var(--text-color);">{item.desc}</p>
              </div>
            ))}
          </div>
        </div>

      </div>
    </div>
   </section>